<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-sessions-table" author="your_name">

        <!-- Create table -->
        <createTable tableName="sessions">

            <column name="id_session" type="SERIAL">
                <constraints primaryKey="true"
                             primaryKeyName="pk_sessions"
                             nullable="false"/>
            </column>

            <column name="id_user" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="session_token_hash" type="VARCHAR(255)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uq_sessions_token"/>
            </column>

            <column name="created_at" type="TIMESTAMP"
                    defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <!-- Add ON DELETE CASCADE -->
        <addForeignKeyConstraint
                baseTableName="sessions"
                baseColumnNames="id_user"
                constraintName="fk_sessions_user"
                referencedTableName="users"
                referencedColumnNames="id_user"
                onDelete="CASCADE"/>

        <!-- Indexes -->
        <createIndex tableName="sessions"
                     indexName="idx_sessions_user">
            <column name="id_user"/>
        </createIndex>

        <createIndex tableName="sessions"
                     indexName="idx_sessions_expires">
            <column name="expires_at"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
